.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.dialog-header {
  padding: 30rpx 24rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.dialog-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.dialog-content {
  padding: 40rpx 30rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.password-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.password-hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.dialog-footer {
  display: flex;
  border-top: 1rpx solid #eee;
  height: 100rpx;
}

.btn {
  flex: 1;
  height: 100%;
  border: none;
  border-radius: 0;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 0;
  padding: 0;
}

.btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: var(--color-primary, #2C7EF8);
  color: #fff;
}

.confirm-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
} 