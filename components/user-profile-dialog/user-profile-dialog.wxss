.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog {
  width: 85%;
  max-width: 650rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.dialog-header {
  padding: 30rpx 24rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.dialog-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.dialog-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  display: block;
}

.dialog-content {
  padding: 30rpx;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-bottom: 10rpx;
  width: 150rpx;
  height: 150rpx;
}

/* 头像选择按钮 */
.avatar-button {
  width: 150rpx !important;
  height: 150rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  background-color: transparent !important;
  border-radius: 75rpx !important;
  overflow: hidden;
  display: block;
  line-height: 1 !important;
}

.avatar-button::after {
  border: none;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  background-color: #f0f0f0;
  border: 1rpx solid #eeeeee;
}

.avatar-edit-badge {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-bottom-left-radius: 75rpx;
  border-bottom-right-radius: 75rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none; /* 确保不会阻止按钮点击 */
}

.avatar-edit-text {
  color: #ffffff;
  font-size: 22rpx;
}

/* 昵称部分 */
.nickname-section {
  margin-top: 20rpx;
}

.nickname-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.nickname-input-container {
  position: relative;
  margin-bottom: 20rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

/* 底部按钮 */
.dialog-footer {
  display: flex;
  border-top: 1rpx solid #f5f5f5;
  height: 100rpx;
}

.btn {
  flex: 1;
  height: 100%;
  border: none;
  border-radius: 0;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 0;
  padding: 0;
}

.btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f9f9f9;
  color: #666;
}

.confirm-btn {
  background-color: var(--color-primary, #2C7EF8);
  color: #fff;
}

.confirm-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
} 