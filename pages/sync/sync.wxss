/**sync.wxss**/
.settings-section {
  margin-bottom: 30rpx;
}

.settings-title {
  font-size: 28rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
  padding: 0 10rpx;
}

.settings-card {
  background-color: var(--color-card);
  border-radius: 16rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.settings-item-content {
  display: flex;
  align-items: center;
}

.settings-item-name {
  font-size: 30rpx;
  color: var(--color-text);
}

.info-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.info-text {
  font-size: 26rpx;
  color: var(--color-text-light);
}

.button-area {
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
}

.sync-button, .restore-button {
  min-width: 200rpx;
  margin: 0;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background-color: var(--color-primary);
  color: white;
}

.restore-button {
  background-color: var(--color-secondary);
}

button[disabled] {
  background-color: rgba(0, 0, 0, 0.1) !important;
  color: rgba(0, 0, 0, 0.3) !important;
}

.tip-text {
  font-size: 24rpx;
  color: var(--color-text-light);
  padding: 10rpx;
  margin-top: 10rpx;
}

/* 信息卡片 */
.info-section {
  margin-bottom: 40rpx;
}

.info-card {
  background-color: var(--color-card);
  border-radius: 16rpx;
  overflow: hidden;
}

.info-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.info-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text);
}

.info-content {
  padding: 20rpx 30rpx;
}

.info-paragraph {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.info-paragraph:last-child {
  margin-bottom: 0;
} 