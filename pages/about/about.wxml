<!--pages/about/about.wxml-->
<view class="container {{theme}}">
  <!-- 应用信息 -->
  <view class="app-info">
    <view class="app-logo">
      <image src="../../static/icons/app-icon.jpg"></image>
    </view>
    <view class="app-name">物记盒子</view>
    <view class="app-version">版本 {{version}}</view>
    <!-- <view class="app-update">更新日期：{{updateTime}}</view> -->
  </view>
  
  <!-- 功能列表 -->
  <view class="function-list">
    <view class="function-card">
      <view class="function-item" bindtap="openUserAgreement">
        <view class="function-item-content">
          <text class="function-item-name">用户协议</text>
        </view>
        <view class="function-item-arrow"></view>
      </view>
      
      <view class="function-item" bindtap="openPrivacyPolicy">
        <view class="function-item-content">
          <text class="function-item-name">隐私政策</text>
        </view>
        <view class="function-item-arrow"></view>
      </view>
      
      <view class="function-item" bindtap="checkUpdate">
        <view class="function-item-content">
          <text class="function-item-name">检查更新</text>
        </view>
        <view class="function-item-arrow"></view>
      </view>
    </view>
  </view>
  
  <!-- 联系我们 -->
  <view class="contact-section">
    <view class="contact-title">联系我们</view>
    <view class="contact-card">
      <view class="contact-item" bindtap="copyEmail">
        <text class="contact-email">{{contactEmail}}</text>
        <text class="contact-copy">点击复制</text>
      </view>
    </view>
  </view>
  
  <!-- 版权信息 -->
  <view class="copyright">
    <text>© 2025 物记盒子团队 版权所有</text>
  </view>
</view> 