/**detail.wxss**/
/* 详情页头部 */
.detail-header {
  height: 56px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 0 15px;
  background-color: #fff;
}

.back-button {
  position: absolute;
  left: 15px;
  top: 50%;
  transform: translateY(-50%);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 18px;
  border-radius: 18px;
  background-color: rgba(0, 0, 0, 0.05);
  transition: background-color 0.2s;
}

.back-button:hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.detail-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 加载动画 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading {
  width: 40px;
  height: 40px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 详情页资产卡片 */
.asset-detail-card {
  background-color: #fff;
  border-radius: 16px;
  padding: 25px 20px;
  color: #333;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
  margin-bottom: 16px;
}

.asset-detail-name {
  font-size: 22px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 12px;
}

.asset-detail-days {
  font-size: 18px;
  text-align: center;
  margin-bottom: 16px;
  color: #666;
}

.warranty-indicator {
  display: flex;
  justify-content: center;
  margin-bottom: 16px;
}

.warranty-dot {
  width: 12px;
  height: 12px;
  border-radius: 6px;
  background-color: #2C7EF8;
  margin: 0 5px;
}

.warranty-dot.empty {
  background-color: #e0e0e0;
}

.purchase-date {
  text-align: center;
  font-size: 14px;
  color: #666;
}

/* 详情信息卡片 */
.info-card {
  background-color: #fff;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #f0f2f5;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-item:first-child {
  padding-top: 0;
}

.info-label {
  display: flex;
  align-items: center;
  color: #666;
}

.info-icon {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  font-size: 18px;
}

.icon-price {
  background-color: #E5F7FF;
  color: #09C1DE;
}

.icon-daily {
  background-color: #FFF4E5;
  color: #FF9500;
}

.icon-status {
  background-color: #E5FFF1;
  color: #34C759;
}

.icon-category {
  background-color: #F1E5FF;
  color: #AF52DE;
}

.icon-warranty {
  background-color: #FFE5E5;
  color: #FF3B30;
}

.icon-desc {
  background-color: #F5F5F7;
  color: #8E8E93;
}

.info-value {
  font-weight: 500;
  color: #333;
}

.status-valid {
  color: #34C759;
}

.status-expiring {
  color: #FF9500;
}

.status-expired {
  color: #FF3B30;
}

.btns-box{
  display: flex;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 52px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 600;
  transition: transform 0.2s, box-shadow 0.2s;
}

.btn:hover {
  transform: translateY(-2px);
}

.btn-primary {
  background-color: #2C7EF8;
  color: white;
  box-shadow: 0 8px 15px rgba(44, 126, 248, 0.2);
}

.btn-primary:hover {
  box-shadow: 0 12px 20px rgba(44, 126, 248, 0.3);
}

.btn-danger {
  background-color: #FF3B30;
  color: white;
  box-shadow: 0 8px 15px rgba(255, 59, 48, 0.2);
}

.btn-danger:hover {
  box-shadow: 0 12px 20px rgba(255, 59, 48, 0.3);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 1001;
}

.modal-content {
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.modal-icon {
  font-size: 80rpx;
  color: #f5222d;
  margin: 20rpx 0;
}

.modal-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.modal-buttons {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
}

.modal-btn.cancel {
  color: #999;
  border-right: 1rpx solid #eee;
}

.modal-btn.confirm {
  color: #f5222d;
  font-weight: 500;
}

