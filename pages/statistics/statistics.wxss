/**statistics.wxss**/
/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 100rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 概览内容 */
.overview-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

/* 图表容器 */
.chart-container {
  margin: 30rpx 0;
}

/* 甜甜圈图 */
.donut-chart {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 40rpx;
  border-radius: 50%;
  overflow: hidden;
}

.donut-segments {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.donut-segment {
  position: absolute;
  width: 100%;
  height: 100%;
  transform-origin: center;
}

.donut-segment-inner {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: currentColor;
  transform-origin: center;
  clip-path: polygon(50% 50%, 50% 0%, 100% 0%, 100% 100%, 0% 100%, 0% 0%, 50% 0%);
}

.donut-hole {
  position: absolute;
  width: 60%;
  height: 60%;
  background-color: white;
  border-radius: 50%;
  top: 20%;
  left: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.donut-total-label {
  font-size: 24rpx;
  color: var(--color-text-secondary, #666);
  margin-bottom: 8rpx;
}

.donut-total-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text, #333);
}

/* 分类列表 */
.category-list {
  margin-top: 20rpx;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--color-border);
}

.category-item:last-child {
  border-bottom: none;
}

.category-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.category-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.category-name {
  font-size: 28rpx;
  color: var(--color-text);
}

.category-detail {
  display: flex;
  align-items: center;
  text-align: right;
}

.category-value {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-right: 20rpx;
}

.category-percent {
  font-size: 24rpx;
  color: var(--color-text-light);
}

/* 排行部分 */
.ranking-section {
  margin-bottom: 20rpx;
}

.ranking-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: 12rpx;
}

.ranking-icon {
  margin-right: 8rpx;
}

/* 最近添加 */
.recent-asset-info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.recent-asset-icon {
  color: var(--color-primary);
  margin-right: 8rpx;
}

.recent-asset-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.recent-asset-price {
  margin-left: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
}

.recent-asset-time {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-top: 4rpx;
}

/* 小版本空状态 */
.empty-state-mini {
  padding: 30rpx 0;
  text-align: center;
}

/* 饼图旋转动画 */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
} 