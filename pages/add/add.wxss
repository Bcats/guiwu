/* 表单项图标 */
.item-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 32rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  height: 56rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.picker-view {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.unit-text {
  margin-left: 16rpx;
  color: #999;
  font-size: 28rpx;
}

.chevron-right {
  color: #CCCCCC;
  font-size: 30rpx;
  margin-left: 16rpx;
}

/* 照片上传区域 */
.photo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.photo-title {
  font-size: 30rpx;
  color: #333;
}

.photo-desc {
  font-size: 28rpx;
  color: #999;
}

.upload-area {
  padding: 30rpx;
  height: 180rpx;
  background-color: #F9FAFC;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 24rpx;
}

.upload-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-content .icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 28rpx;
}

/* 图片预览列表 */
.image-preview-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 24rpx;
}

.image-preview-item {
  width: 29%;
  height: 180rpx;
  margin-right: 3.5%;
  margin-bottom: 16rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.image-preview-item:nth-child(3n) {
  margin-right: 0;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  color: #FF3B30;
  font-size: 32rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 18rpx;
}

.add-more {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F9FAFC;
  color: #999;
  font-size: 40rpx;
  border: 1rpx dashed #DDD;
}

/* 备注区域 */
.remark-header {
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.remark-title {
  font-size: 30rpx;
  color: #333;
}

.remark-content {
  padding: 20rpx 24rpx;
}

/* 备注文本框 */
.form-textarea {
  width: 100%;
  height: 160rpx;
  background-color: #F9FAFC;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 16rpx 24rpx;
  background-color: white;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin: 0 8rpx;
}

.btn-primary {
  background-color: #2C7EF8;
  color: #FFFFFF;
}

.btn-secondary {
  background-color: #F2F4F6;
  color: #666;
}

/* 选择器样式 */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.picker-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  z-index: 1001;
  border-radius: 16rpx 16rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  max-height: 70vh;
  overflow-y: auto;
}

.picker-container.show {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  font-weight: 500;
  position: sticky;
  top: 0;
  background-color: white;
  z-index: 10;
}

.picker-content {
  max-height: 60vh;
  overflow-y: auto;
  padding-bottom: 24rpx;
}

.picker-item {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item .icon-check {
  color: #2C7EF8;
}

/* 图标选择器 */
.icon-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx 16rpx;
}

.icon-item {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx;
  border-radius: 8rpx;
  background-color: #F9FAFC;
  font-size: 40rpx;
  color: #666;
  transition: all 0.2s ease;
}

.icon-item.selected {
  background-color: #2C7EF8;
  color: white;
  transform: scale(1.05);
} 