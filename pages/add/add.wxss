/**add.wxss**/
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 120rpx); /* 留出底部按钮的空间 */
}

.form-container {
  padding: 24rpx;
  padding-bottom: 140rpx;
}

.form-section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  position: relative;
  border-bottom: 1rpx solid #F5F5F5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.column {
  flex-direction: column;
  align-items: flex-start;
}

/* 图标选择区域 */
.icon-title {
  font-size: 30rpx;
  color: #333;
  margin-right: 30rpx;
}

.icon-selector {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.selected-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #2C7EF8;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}

