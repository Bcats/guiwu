.container {
  padding: 30rpx;
  background-color: var(--color-background, #F7F8FA);
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text, #333333);
  margin-bottom: 10rpx;
}

.description {
  font-size: 28rpx;
  color: var(--color-text-secondary, #666666);
}

.cards-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.card {
  display: flex;
  align-items: center;
  background-color: var(--color-card, #FFFFFF);
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 40rpx;
  color: #FFFFFF;
}

.icon-export {
  background-color: var(--color-primary, #2C7EF8);
}

.icon-import {
  background-color: #52C41A;
}

.icon-clear {
  background-color: #FF4D4F;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--color-text, #333333);
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary, #666666);
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  width: 80%;
  max-width: 600rpx;
}

.modal-content {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

.modal-icon {
  text-align: center;
  font-size: 60rpx;
  color: #FF4D4F;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.text-danger {
  color: #FF4D4F;
  font-weight: bold;
}

.confirm-input-tip {
  font-size: 26rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
  text-align: center;
}

.confirm-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 10rpx 0;
  box-sizing: border-box;
}

.modal-buttons {
  display: flex;
  border-top: 1rpx solid #eee;
  margin: 30rpx -30rpx -40rpx;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
}

.cancel {
  color: #666;
  border-right: 1rpx solid #eee;
}

.confirm {
  color: #FF4D4F;
  font-weight: 500;
}

.confirm.disabled {
  color: #ccc;
}

.fa {
  display: inline-block;
  font-family: "FontAwesome";
  font-style: normal;
  font-weight: normal;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
} 