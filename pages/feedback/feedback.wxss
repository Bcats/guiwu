/* pages/feedback/feedback.wxss */

.container {
  min-height: 100vh;
  background-color: var(--color-background, #F7F8FA);
  padding: 30rpx;
}

.feedback-header {
  margin-bottom: 40rpx;
}

.feedback-title {
  font-size: 44rpx;
  font-weight: 600;
  color: var(--color-text, #333);
  margin-bottom: 16rpx;
}

.feedback-desc {
  font-size: 28rpx;
  color: var(--color-text-secondary, #666);
}

.feedback-form {
  background-color: var(--color-card, #FFFFFF);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text, #333);
  margin-bottom: 16rpx;
}

.feedback-textarea {
  width: 100%;
  height: 240rpx;
  background-color: var(--color-background, #F7F8FA);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--color-text, #333);
  box-sizing: border-box;
}

.textarea-limit {
  font-size: 24rpx;
  color: var(--color-text-light, #999);
  text-align: right;
  margin-top: 8rpx;
}

.feedback-input {
  width: 100%;
  height: 80rpx;
  background-color: var(--color-background, #F7F8FA);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--color-text, #333);
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: var(--color-primary, #2C7EF8);
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.submit-btn.disabled {
  opacity: 0.5;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #FFFFFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.feedback-tips {
  background-color: var(--color-card, #FFFFFF);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text, #333);
  margin-bottom: 16rpx;
}

.tips-item {
  font-size: 28rpx;
  color: var(--color-text-secondary, #666);
  line-height: 1.6;
  margin-bottom: 10rpx;
} 