/**index.wxss**/
/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx; /* 添加底部padding，避免内容被tabBar遮挡 */
}

.container-scroll {
  flex: 1;
  background-color: #f7f8fa;
  padding-bottom: 120rpx; /* 确保滚动区域有足够的底部空间 */
  overflow-y: auto; /* 允许内容滚动 */
}

/* 状态栏 */
.status-bar {
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
  z-index: 5;
  background-color: #fff;
}

.status-bar::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: rgba(0, 0, 0, 0.05);
}

.status-time {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.status-icons {
  display: flex;
  gap: 12rpx;
  font-size: 28rpx;
  color: #333;
}

/* 首页总资产卡片 */
.overview-card {
  background-color: #2C7EF8;
  color: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 20rpx 50rpx -10rpx rgba(44, 126, 248, 0.3);
}

.overview-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.overview-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}

.overview-item {
  margin-bottom: 20rpx;
}

.overview-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.overview-value {
  font-size: 48rpx;
  font-weight: 600;
}

.dropdown {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 8rpx 24rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.dropdown-icon {
  margin-left: 8rpx;
}

/* 资产卡片外层容器 */
.asset-card-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

/* 资产卡片 */
.asset-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
  color: #333;
  position: relative;
  z-index: 1;
  margin-bottom: 24rpx;
}

.asset-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
}

.asset-card.electronic {
  background-color: #B471FF; /* 紫色，类似PS5卡片 */
  box-shadow: 0 16rpx 30rpx -10rpx rgba(180, 113, 255, 0.3);
}

.asset-card.electronic:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(180, 113, 255, 0.4);
}

.asset-card.furniture {
  background-color: #FF9500;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(255, 149, 0, 0.3);
}

.asset-card.furniture:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(255, 149, 0, 0.4);
}

.asset-card.transport {
  background-color: #4cd964;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(76, 217, 100, 0.3);
}

.asset-card.transport:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(76, 217, 100, 0.4);
}

.asset-card.entertainment {
  background-color: #AF52DE;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(175, 82, 222, 0.3);
}

.asset-card.entertainment:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(175, 82, 222, 0.4);
}

.asset-card.photography {
  background-color: #FF2D55;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(255, 45, 85, 0.3);
}

.asset-card.photography:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(255, 45, 85, 0.4);
}

.asset-card.kitchen {
  background-color: #5AC8FA;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(90, 200, 250, 0.3);
}

.asset-card.kitchen:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(90, 200, 250, 0.4);
}

.asset-card.clothing {
  background-color: #007AFF;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(0, 122, 255, 0.3);
}

.asset-card.clothing:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(0, 122, 255, 0.4);
}

.asset-card.default {
  background-color: #8E8E93;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(142, 142, 147, 0.3);
}

.asset-card.default:hover {
  box-shadow: 0 24rpx 50rpx -10rpx rgba(142, 142, 147, 0.4);
}

.asset-info {
  flex: 1;
  margin-left: 20rpx;
}

.asset-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.asset-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #F5F5F5;
}

.asset-icon-wrapper .fa {
  font-size: 40rpx;
  color: #2C7EF8;
}

.asset-icon-image {
  width: 50rpx;
  height: 50rpx;
}

/* 不同类型资产的图标背景颜色 */
.asset-icon-electronic {
  background-color: #E9F6FF;
}

.asset-icon-furniture {
  background-color: #FFF5EC;
}

.asset-icon-transport {
  background-color: #F4FFED;
}

.asset-icon-entertainment {
  background-color: #F9F0FF;
}

.asset-icon-photography {
  background-color: #FFF0F6;
}

.asset-icon-kitchen {
  background-color: #F0F5FF;
}

.asset-icon-clothing {
  background-color: #F0F7FF;
}

.asset-icon-default {
  background-color: #F5F5F5;
}

.asset-price {
  font-size: 28rpx;
  color: #666;
}

.asset-usage {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  min-width: 120rpx;
  text-align: right;
}

/* 卡片展开部分 */
.asset-card-expand {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background-color: #F9F9F9;
}

.asset-card-expand.expanded {
  max-height: 600rpx; /* 足够大的高度以容纳内容 */
}

.expand-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #EEEEEE;
}

.expand-label {
  color: #999;
  font-size: 28rpx;
}

.expand-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.expand-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #EEEEEE;
}

.expand-btn {
  background-color: #2C7EF8;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

/* 图标样式 - 根据不同分类自定义颜色 */
.fa-mobile-alt, .fa-tablet-alt, .fa-laptop {
  color: #007AFF;
}

.fa-couch, .fa-bed, .fa-chair {
  color: #34C759;
}

.fa-car, .fa-bicycle, .fa-motorcycle {
  color: #FF3B30;
}

.fa-tshirt, .fa-socks, .fa-hat-cowboy {
  color: #5856D6;
}

.fa-gamepad, .fa-headphones, .fa-film {
  color: #FF9500;
}

.fa-utensils, .fa-blender, .fa-coffee {
  color: #8E8E93;
}

.fa-tools, .fa-hammer, .fa-screwdriver {
  color: #64748B;
}

.fa-gem, .fa-ring, .fa-crown {
  color: #FF2D55;
}

.fa-book, .fa-bookmark, .fa-journal-whills {
  color: #5AC8FA;
}

/* 浮动添加按钮 */
.floating-btn {
  position: fixed;
  right: 40rpx;
  bottom: 220rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #2C7EF8;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  box-shadow: 0 20rpx 40rpx rgba(44, 126, 248, 0.4);
  z-index: 100;
  transition: transform 0.2s, box-shadow 0.2s;
}

.floating-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 30rpx 50rpx rgba(44, 126, 248, 0.6);
}

/* 左滑操作按钮区域 */
.slide-options {
  display: flex;
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  z-index: 0;
  border-radius: 0 32rpx 32rpx 0;
  overflow: hidden;
}

.option-top, .option-edit, .option-delete {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  color: white;
  font-size: 24rpx;
}

.option-top {
  background-color: #2C7EF8;
}

.option-edit {
  background-color: #FF9500;
}

.option-delete {
  background-color: #FF3B30;
}

.slide-options text.fa {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

/* 左滑状态的卡片样式 */
.asset-card-slide-left {
  transform: translateX(-360rpx);
  transition: transform 0.3s ease-out;
}

/* 正常状态的卡片样式 */
.asset-card-normal {
  transform: translateX(0);
  transition: transform 0.3s ease-out;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 100rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #2C7EF8;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 搜索框 */
.search-box {
  padding: 24rpx;
  background-color: var(--color-card);
  position: sticky;
  top: 0;
  z-index: 10;
  margin-bottom: 10rpx;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: #F5F7FA;
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0 30rpx;
}

.search-icon {
  font-size: 28rpx;
  color: #999999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: var(--color-text);
}

.search-placeholder {
  color: #CCCCCC;
}

/* 分类选择 */
.category-scroll {
  margin-bottom: 24rpx;
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 20rpx;
}

.category-item {
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  color: var(--color-text-secondary);
  background-color: #F5F7FA;
  margin-right: 16rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.category-item.active {
  background-color: var(--color-primary);
  color: white;
}

/* 分类下拉菜单 */
.category-dropdown {
  position: absolute;
  top: 100rpx;
  left: 200rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  width: 240rpx;
  max-height: 600rpx;
  overflow-y: auto;
  z-index: 100;
}

.category-dropdown .category-item {
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f5f5f5;
  margin: 0;
  border-radius: 0;
  background-color: transparent;
  display: block;
  width: auto;
}

.category-dropdown .category-item.active {
  color: #2C7EF8;
  font-weight: 500;
  background-color: transparent;
}

.category-dropdown .category-item:last-child {
  border-bottom: none;
}

/* 展开时的详情内容 */
.asset-detail {
  background-color: white;
  border-radius: 0 0 32rpx 32rpx;
  margin-top: -16rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 30rpx -10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 0;
  word-wrap: break-word;
  word-break: break-all;
  overflow-x: hidden;
  max-width: 100%;
  animation: fadeIn 0.3s ease-in-out;
  display: block;
}

.detail-row {
  display: flex;
  margin-bottom: 16rpx;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #999;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.detail-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
}

.detail-btn {
  background-color: #2C7EF8;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  border: none;
  line-height: 1;
}

/* 资产列表 */
.asset-list {
  margin-bottom: 160rpx; /* 避免被浮动按钮遮挡 */
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 