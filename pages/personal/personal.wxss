/**personal.wxss**/
/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 30rpx 30rpx 160rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 100rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #2C7EF8;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 用户卡片 */
.user-card {
  background-color: #2C7EF8;
  color: white;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 50rpx rgba(44, 126, 248, 0.2);
  display: flex;
  align-items: center;
  position: relative;
}

/* 头像容器 */
.avatar-container {
  position: relative;
  margin-right: 32rpx;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  margin-right: 0;
  border-radius: 70rpx;
  background-color: white;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.avatar-tip {
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.user-info {
  flex: 1;
}

.user-nickname {
  font-size: 40rpx;
  font-weight: 600;
}

.user-id {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

.stats-divider {
  width: 2rpx;
  height: 70rpx;
  background-color: #f0f2f5;
}

/* 功能列表 */
.function-list {
  background-color: white;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  margin-top: 0;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f2f5;
  transition: background-color 0.2s;
  justify-content: normal;
}

.function-item:last-child {
  border-bottom: none;
}

/* .function-item:hover {
  background-color: #f9f9f9;
} */

.function-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.fa {
  display: inline-block;
  font-family: "FontAwesome";
  font-style: normal;
  font-weight: normal;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-theme {
  background-color: #E5F7FF;
  color: #09C1DE;
}

.icon-data-manage {
  background-color: #E6E6FA;
  color: #6A5ACD;
}

.icon-about {
  background-color: #FFF4E5;
  color: #FF9500;
}

.icon-share {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.icon-sync {
  background-color: #E5FFF1;
  color: #34C759;
}

.icon-clear {
  background-color: #FFE5E5;
  color: #FF3B30;
}

.icon-feedback {
  background-color: #E8F0FF;
  color: #007AFF;
}

.icon-review {
  background-color: #FFF9E6;
  color: #FFCC00;
}

.icon-logout {
  background-color: #F5F5F5;
  color: #8E8E93;
}

.function-info {
  flex: 1;
}

.function-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  padding: 0;
}

.function-desc {
  font-size: 26rpx;
  color: #999;
}

.function-arrow {
  margin-left: auto;
  color: #ccc;
  font-size: 32rpx;
}

/* 版本信息 */
.version-info {
  margin-top: 30rpx;
  text-align: center;
  color: var(--color-text-light);
}

.version-text {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.copyright-text {
  font-size: 24rpx;
}

/* 状态栏样式 */
.stats-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  background-color: var(--color-card);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 浮动添加按钮 */
.floating-btn {
  position: fixed;
  right: 40rpx;
  bottom: 180rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: var(--color-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
  transition: transform 0.2s, box-shadow 0.2s;
}

.floating-btn:active {
  transform: scale(0.95);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.3);
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-container {
  width: 80%;
  max-width: 600rpx;
}

.modal-content {
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-icon {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx auto;
  background-color: #FFE5E5;
  border-radius: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #FF3B30;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 20rpx;
}

.modal-desc {
  padding: 0 40rpx;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
  text-align: center;
}

.modal-buttons {
  display: flex;
  border-top: 1rpx solid #f0f2f5;
}

.modal-btn {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f2f5;
}

.modal-btn.confirm {
  color: #FF3B30;
  font-weight: 500;
}

/* 分享按钮样式 */
.share-button {
  background: none;
  width: 100% !important;
  padding: 32rpx 40rpx !important;
  margin: 0;
  line-height: 1;
  outline: none;
  text-align: left;
  font-size: inherit;
  font-weight: normal;
  color: inherit;
  box-sizing: border-box;
  border-radius: 0;
}

.share-button::after {
  border: none;
} 