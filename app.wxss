/**app.wxss**/
@import "/static/fontawesome.wxss";

/* 亮色主题变量 */
page {
  --color-primary: #2C7EF8;
  --color-secondary: #4A90E2;
  --color-danger: #FF3B30;
  --color-warning: #FF9500;
  --color-success: #34C759;
  
  --color-background: #f7f8fa;
  --color-card: #FFFFFF;
  --color-border: #f0f2f5;
  
  --color-text: #333333;
  --color-text-secondary: #666666;
  --color-text-light: #999999;
  
  /* 资产卡片颜色 */
  --card-electronic: #B471FF;
  --card-furniture: #FF9500;
  --card-transport: #4CD964;
  --card-entertainment: #AF52DE;
  --card-other: #8E8E93;
  
  /* 信息图标颜色 */
  --icon-price-bg: #E5F7FF;
  --icon-price-color: #09C1DE;
  --icon-daily-bg: #FFF4E5;
  --icon-daily-color: #FF9500;
  --icon-status-bg: #E5FFF1;
  --icon-status-color: #34C759;
  --icon-category-bg: #F1E5FF;
  --icon-category-color: #AF52DE;
  
  background-color: var(--color-background);
  color: var(--color-text);
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

/* 暗色主题变量 */
.dark {
  --color-background: #1C1C1E;
  --color-card: #2C2C2E;
  --color-border: #3A3A3C;
  
  --color-text: #FFFFFF;
  --color-text-secondary: #CCCCCC;
  --color-text-light: #8E8E93;
}

/* 安全区适配 - 底部 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom); /* iOS 11.0 */
  padding-bottom: env(safe-area-inset-bottom); /* iOS 11.2+ */
}

/* 安全区适配 - 顶部 */
.safe-area-top {
  padding-top: constant(safe-area-inset-top); /* iOS 11.0 */
  padding-top: env(safe-area-inset-top); /* iOS 11.2+ */
}

/* 容器通用样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: var(--color-background);
  padding: 30rpx;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom)); /* 增加底部间距 */
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom)); /* 增加底部间距 */
  box-sizing: border-box;
}

/* 滚动容器 */
.container-scroll {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom)); /* 增加底部间距 */
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom)); /* 增加底部间距 */
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/* 通用卡片样式 */
.card {
  background-color: var(--color-card);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 20rpx;
}

/* 首页总资产卡片 */
.overview-card {
  background-color: #4CD964;
  color: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 50rpx -10rpx rgba(76, 217, 100, 0.3);
}

.overview-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
}

.overview-content {
  display: flex;
  align-items: center;
}

.overview-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-value {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.overview-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.overview-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
}

/* 资产卡片 */
.asset-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #4CD964;
  border-radius: 32rpx;
  padding: 32rpx 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 16rpx 30rpx -10rpx rgba(76, 217, 100, 0.3);
  color: white;
}

.asset-card.electronic {
  background-color: var(--card-electronic);
  box-shadow: 0 16rpx 30rpx -10rpx rgba(180, 113, 255, 0.3);
}

.asset-card.furniture {
  background-color: var(--card-furniture);
  box-shadow: 0 16rpx 30rpx -10rpx rgba(255, 149, 0, 0.3);
}

.asset-card.transport {
  background-color: var(--card-transport);
  box-shadow: 0 16rpx 30rpx -10rpx rgba(76, 217, 100, 0.3);
}

.asset-card.entertainment {
  background-color: var(--card-entertainment);
  box-shadow: 0 16rpx 30rpx -10rpx rgba(175, 82, 222, 0.3);
}

.asset-info {
  flex: 1;
}

.asset-name {
  font-size: 34rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.asset-icon {
  margin-right: 20rpx;
  font-size: 40rpx;
}

.asset-price {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.asset-usage {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  min-width: 120rpx;
  text-align: right;
}

/* 浮动添加按钮 */
.floating-btn {
  position: fixed;
  right: 40rpx;
  bottom: calc(140rpx + constant(safe-area-inset-bottom)); /* 增加底部间距 */
  bottom: calc(140rpx + env(safe-area-inset-bottom)); /* 增加底部间距 */
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: var(--color-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  box-shadow: 0 20rpx 40rpx rgba(44, 126, 248, 0.4);
  z-index: 100;
}

/* 卡片样式 */
.card {
  background-color: var(--color-card);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 30rpx;
}

/* 统计数据样式 */
.stats-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: var(--color-text-light);
}

.stats-divider {
  width: 2rpx;
  height: 70rpx;
  background-color: var(--color-border);
}

/* 统计行 */
.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--color-border);
  font-size: 28rpx;
  color: var(--color-text);
}

.stats-row:last-child {
  border-bottom: none;
}

/* 详情页资产卡片 */
.asset-detail-card {
  background-color: var(--color-card);
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  color: var(--color-text);
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.asset-detail-name {
  font-size: 44rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 24rpx;
}

.asset-detail-days {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 32rpx;
  color: var(--color-text-secondary);
}

.warranty-indicator {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.warranty-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background-color: var(--color-primary);
  margin: 0 10rpx;
}

.warranty-dot.empty {
  background-color: #e0e0e0;
}

.purchase-date {
  text-align: center;
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 信息卡片 */
.info-card {
  background-color: var(--color-card);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid var(--color-border);
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-item:first-child {
  padding-top: 0;
}

.info-label {
  display: flex;
  align-items: center;
  color: var(--color-text-secondary);
}

.info-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 36rpx;
}

.icon-price {
  background-color: var(--icon-price-bg);
  color: var(--icon-price-color);
}

.icon-daily {
  background-color: var(--icon-daily-bg);
  color: var(--icon-daily-color);
}

.icon-status {
  background-color: var(--icon-status-bg);
  color: var(--icon-status-color);
}

.icon-category {
  background-color: var(--icon-category-bg);
  color: var(--icon-category-color);
}

.info-value {
  font-weight: 500;
  color: var(--color-text);
}

/* 用户卡片 */
.user-card {
  background-color: var(--color-primary);
  color: white;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 50rpx rgba(44, 126, 248, 0.2);
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background-color: white;
  margin-right: 32rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.user-meta {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.user-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.user-action {
  margin-top: 20rpx;
}

.btn-login {
  background-color: rgba(255, 255, 255, 0.25);
  color: white;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  line-height: 1.2;
}

/* 功能列表 */
.function-list {
  margin-top: 30rpx;
}

.function-section {
  margin-bottom: 30rpx;
}

.function-title {
  font-size: 28rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
  padding: 0 10rpx;
}

.function-card {
  background-color: var(--color-card);
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.function-item:last-child {
  border-bottom: none;
}

.function-item-content {
  display: flex;
  align-items: center;
}

.function-item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.theme-icon {
  background-color: var(--icon-price-bg);
  color: var(--icon-price-color);
}

.sync-icon {
  background-color: var(--icon-status-bg);
  color: var(--icon-status-color);
}

.clear-icon {
  background-color: #FFE5E5;
  color: var(--color-danger);
}

.about-icon {
  background-color: var(--icon-daily-bg);
  color: var(--icon-daily-color);
}

.function-item-name {
  font-size: 30rpx;
  color: var(--color-text);
}

.function-item-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid var(--color-text-light);
  border-right: 2rpx solid var(--color-text-light);
  transform: rotate(45deg);
}

.function-item.danger .function-item-name {
  color: var(--color-danger);
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 30rpx;
  color: var(--color-text-secondary);
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 104rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 24rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  background-color: #f8f9fa;
  box-sizing: border-box;
  color: var(--color-text);
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  font-size: 32rpx;
  background-color: #f8f9fa;
  box-sizing: border-box;
  color: var(--color-text);
}

.form-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 104rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: var(--color-primary);
  color: white;
  box-shadow: 0 16rpx 30rpx rgba(44, 126, 248, 0.2);
}

.btn-secondary {
  background-color: #f5f5f7;
  color: var(--color-text);
}

.btn-danger {
  background-color: var(--color-danger);
  color: white;
  box-shadow: 0 16rpx 30rpx rgba(255, 59, 48, 0.2);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 100rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--color-text-light);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态提示 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  color: var(--color-text-light);
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--color-text-light);
}

.empty-state-mini {
  padding: 30rpx 0;
  text-align: center;
} 